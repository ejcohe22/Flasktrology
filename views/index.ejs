<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Style sheets : Main || Personal Overrides -->
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link href="public/css/style.css" rel="stylesheet" type="text/css">
    <title>Horoscope Webapp Home</title>
</head>

<!-- >%- include("partials/header"); -%< -->
<header class="w3-bar w3-round-small w3-padding-16 w3-purple w3-center w3-xlarge ">
    <div> Check Your Horoscope!</div>
</header>

<body class="home-background">
    <form class="sign-form" method="post" action="/sunSignQuery">
        <div class="sign choice">
            <label for="form-1-sunsign">
              Choose your sun sign
            </label>
            <select class="form-control" name="form_1_sunsign">
              <% sunsigns.forEach(sign => { %>
                <option><%= sign %></option>
              <% }) %>
            </select>
            <input type="submit">
        </div>
    </form>
</body>
<!-- >%- include("partials/footer"); -%< -->

</html>